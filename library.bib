keywords = {Animals,Archaeal Proteins,Archaeal Proteins: genetics,Archaeal Proteins: metabolism,Bacterial Proteins,Bacterial Proteins: genetics,Bacterial Proteins: metabolism,Computational Biology,Eukaryotic Cells,Eukaryotic Cells: metabolism,Evolution, Molecular,Geologic Sediments,Geologic Sediments: chemistry,Metals,Metals: chemistry,Metals: metabolism,Oxidation-Reduction,Proteome,Seawater,Trace Elements,Trace Elements: chemistry,Trace Elements: metabolism},
month = nov,
number = {47},
