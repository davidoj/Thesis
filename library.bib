issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences},
pages = {201722232},
pmid = {29581311},
title = {Processes and patterns of interaction as units of selection: An introduction to ITSNTS thinking},
year = {2018}
}
@article{Curtis2012,
