keywords = {1,12,2018,carbon cycle,com,earth history,eukaryotes,gbi,geobiology,journal,marine productivity,ocean chemistry,wileyonlinelibrary,zinc,zinc isotopes},
number = {July 2017},
pages = {3076},
title = {Tracking the Rise of Eukaryotes to Ecological Dominance with Zinc Isotopes},
year = {2016}
}
