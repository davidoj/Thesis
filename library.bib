arxivId = {1610.04515},
author = {Arney, Giada N. and Domagal-Goldman, Shawn D. and Meadows, Victoria S. and Wolf, Eric T. and Schwieterman, Edward W. and Charnay, Benjamin and Claire, Mark W. and H{\'{e}}brard, Eric and Trainer, Melissa G.},
