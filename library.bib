arxivId = {1601.05277},
author = {Fornasier, S. and Lantz, C. and Perna, D. and Campins, H. and Barucci, M. A. and Nesvorny, D.},
doi = {10.1016/j.icarus.2016.01.002},
eprint = {1601.05277},
issn = {10902643},
journal = {Icarus},
keywords = {Asteroids composition,Asteroids surfaces,Meteorites,Spectroscopy},
month = may,
pages = {1--14},
title = {Spectral variability on primitive asteroids of the Themis and Beagle families: Space weathering effects or parent body heterogeneity?},
