keywords = {Bacteria,Biogenesis,Biological,Carbon Dioxide,Carbon Dioxide: chemistry,Chemical,Citric Acid Cycle,Earth (Planet),Evolution,Ferrous Compounds,Ferrous Compounds: chemistry,Geological Phenomena,Geology,Hot Temperature,Hydrogen-Ion Concentration,Models,Oxidation-Reduction,Planetary,Prokaryotic Cells,Prokaryotic Cells: chemistry,Prokaryotic Cells: metabolism,Proton-Motive Force,Seawater,Seawater: chemistry},
