isbn = {1553-7404},
issn = {15537390},
journal = {PLoS Genetics},
number = {8},
pages = {e1003649},
pmid = {23935528},
title = {Integrative Modeling of eQTLs and Cis-Regulatory Elements Suggests Mechanisms Underlying Cell Type Specificity of eQTLs},
